{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "target": "es2017",
    "rootDir": "src",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["./server/src/app/*"]
    }
  },
  "exclude": ["build", "node_modules"],
  "include": ["./server/src", "pm2.config.js"]
}
